<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <title>Band Tracker</title>
  </head>
  <body>
    <div class="container">
      <div class="col-md-12">
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="/">Band Tracker</a>
            </div>
            <ul class="nav navbar-nav">
              <li class="active"><a href="/">Home</a></li>
              <li><a href="/bands">View All Bands</a></li>
              <li><a href="/bands/add">Add a Band to Track!</a></li>
              <li><a href="/venues">View All Venues</a></li>
              <li><a href="/venues/add">Add a Venue to Track</a></li>
            </ul>
          </div>
        </nav>
        <h1>Venues</h1>
        @if (Model.Count == 0)
        {
          <h4>No Venues have been added yet! Click above to add a Venue</h4>
        }
        else
        {
          <ul class="list-group">
            @foreach (var venue in Model)
            {
              <li class="list-group-item"><a href="/venues/@venue.GetId()">@venue.GetName()</a></li>
              <ul class="list-group">
                <li class="list-group-item">@venue.GetPhone()</li>
                <li class="list-group-item">@venue.GetEmail()</li>
              </ul>
            }
          </ul>
          <form class="form-group" action='/venues/delete-all' method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-danger" type="submit" name="delete">Delete All Venues?</button>
          </form>
        }
      </div>
    </div>
  </body>
</html>
